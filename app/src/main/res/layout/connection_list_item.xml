<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/profile_margin"
    android:layout_marginRight="@dimen/profile_margin"
    android:layout_marginTop="@dimen/profile_margin"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp"
    android:id="@+id/layout_connection">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/profile_padding">

        <ImageView
            android:id="@+id/image_connection"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/profile_padding"/>

        <TextView
            android:id="@+id/username_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/image_connection"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/textColorDark"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/info_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/image_connection"
            android:layout_below="@+id/username_connection"
            android:lines="2"
            android:ellipsize="end"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/message_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/image_connection"
            android:layout_toLeftOf="@+id/timestamp_connection"
            android:layout_below="@+id/info_connection"
            android:lines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/grey"/>

        <TextView
            android:id="@+id/timestamp_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/info_connection"
            android:lines="1"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/grey"/>

        </RelativeLayout>




</android.support.v7.widget.CardView>