<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/global_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/match_image"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:padding="@dimen/match_padding"/>

        <TextView
            android:id="@+id/match_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lines="1"
            android:singleLine="true"
            android:capitalize="words"
            android:gravity="left"
            android:paddingLeft="@dimen/match_padding"
            android:paddingRight="@dimen/match_padding"/>

        <TextView
            android:id="@+id/match_position_company_industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lines="2"
            android:paddingLeft="@dimen/match_padding"
            android:paddingRight="@dimen/match_padding"/>

        <TextView
            android:id="@+id/match_description"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="14sp"
            android:lines="3"
            android:paddingLeft="@dimen/match_padding"
            android:paddingRight="@dimen/match_padding"
            android:paddingBottom="@dimen/match_padding"/>
    </LinearLayout>


</RelativeLayout>
